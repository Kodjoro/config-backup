/* Main Config (wallpaper) */
@import "~/.config/rofi/config.rasi"
/* ---- Configuration ---- */
configuration {
  modi: "drun";
  show-icons: true;
}

window {
  width: 50%;
  height: 80%;
}

/* ---- Mainbox ---- */
mainbox {
  children: ["inputbar", "listview"];
}

entry {
  expand: true;
  placeholder: " 🎞️ Search / Choose Wallpaper";
  horizontal-align: 0.5;
}

/* ---- Listview ---- */
listview {
  columns: 4;
  lines: 4;
  spacing: 20px;
  padding: 10px;
  flow: horizontal;
  fixed-height: true;
  cycle: true;
}

/* ---- Element ---- */
element {
  orientation: vertical;
  padding: 10px;
  spacing: 5px;
  border-radius: 10px;
}

element selected.normal {
  background-color: @selected-normal-background;
}

element-icon {
  size: 128px;  /* Increased size for better visibility */
  horizontal-align: 0.5;
  margin: 0px;  /* Removed negative margin */
}

element-text {
  vertical-align: 0.5;
  horizontal-align: 0.5;
  padding: 6px;
  margin: 6px;
}
